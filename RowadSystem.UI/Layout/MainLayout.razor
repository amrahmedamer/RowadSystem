@using Radzen
@using Radzen.Blazor
@using RowadSystem.UI.Features
@using RowadSystem.UI.Features.Account
@using RowadSystem.UI.Features.ShoppingCart
@inject NavigationManager NavigationManager

@inherits LayoutComponentBase

<div class="app-container">
    @if (NavigationManager.Uri == $"{NavigationManager.BaseUri}" ||NavigationManager.Uri.Contains("#")||NavigationManager.Uri.Contains("register")||NavigationManager.Uri.Contains("Login")||NavigationManager.Uri.Contains("login"))
    {
        <!-- Layout for /Choose Page -->
        <main>
            <div class="bg-white p-3 shadow-sm rounded-4 border">
                @Body
            </div>
        </main>
    }
    else
    {
        <!-- Header/Navbar -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top custom-navbar">
                <div class="container-fluid px-3 px-lg-4">
                    <!-- Logo -->
                    <a class="navbar-brand fw-bold d-flex align-items-center text-white" href="/">
                        <img src="LogoRowad.png" alt="Rowad Logo" class="navbar-logo" /> 
                    </a>

                    <!-- Mobile Actions (Cart, Notifications, Profile) - Visible on mobile -->
                    <div class="d-flex d-lg-none align-items-center gap-2 me-2">
                        <!-- Mobile Cart -->
                        <a class="nav-link text-white position-relative p-2" href="Cart">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                            </svg>
                            @if (count > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.7rem;">
                                    @count
                                </span>
                            }
                        </a>

                        <!-- Mobile Notifications -->
                        <a class="nav-link text-white position-relative p-2" href="live-notifications">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                            </svg>
                        </a>

                        <!-- Mobile Profile -->
                        <div class="nav-item">
                            <Profile></Profile>
                        </div>
                    </div>

                    <!-- Mobile Menu Button -->
                    <button class="navbar-toggler border-0 p-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileOffcanvas" aria-controls="mobileOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Desktop Navigation -->
                    <div class="d-none d-lg-flex align-items-center flex-grow-1 justify-content-between">
                        <!-- Search Form -->
                        <div class="mx-4 flex-grow-1" style="max-width: 500px;">
                            <SearchForm />
                        </div>

                        <!-- Desktop Navbar Links -->
                        <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-0">
                            <!-- Cart -->
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold position-relative link-hover px-3 py-2" href="Cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                    </svg>
                                    <span class="d-none d-xl-inline ms-1">Cart</span>
                                    @if (count > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @count
                                        </span>
                                    }
                                </a>
                            </li>

                            <!-- Notifications -->
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold position-relative link-hover px-3 py-2" href="live-notifications">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                                        <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                                    </svg>
                                    <span class="d-none d-xl-inline ms-1">Notifications</span>
                                </a>
                            </li>

                            <!-- Login -->
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold link-hover px-3 py-2" href="/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>
                                    <span class="d-none d-xl-inline">Login</span>
                                </a>
                            </li>

                            <!-- Register -->
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold link-hover px-3 py-2" href="/register">
                                    <i class="bi bi-person-plus-fill me-1"></i>
                                    <span class="d-none d-xl-inline">Register</span>
                                </a>
                            </li>

                            <!-- Profile -->
                            <li class="nav-item">
                                <Profile></Profile>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Mobile Offcanvas Sidebar -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileOffcanvas" aria-labelledby="mobileOffcanvasLabel">
            <div class="offcanvas-header bg-primary text-white">
                <h5 class="offcanvas-title" id="mobileOffcanvasLabel">
                    <img src="LogoRowad.png" alt="Rowad Logo" style="height: 40px;" class="me-2" />
                    Menu
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <!-- Mobile Search -->
                <div class="p-3 border-bottom">
                    <SearchForm />
                </div>
                <!-- Mobile Navigation Menu -->
                <div class="mobile-nav-menu">
                    <NavMenu />
                </div>
                <!-- Mobile Auth Links -->
                <div class="p-3 border-top mt-auto">
                    <div class="d-grid gap-2">
                        <a href="/Login" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                        <a href="/register" class="btn btn-primary btn-sm">
                            <i class="bi bi-person-plus-fill me-2"></i>Register
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Component -->
        <Modal @ref="modal" />

        <!-- Main Layout -->
        <div class="main-wrapper">
            <div class="container-fluid">
                <div class="row g-0">
                    <!-- Desktop Sidebar -->
                    <aside class="col-lg-3 col-xl-2 d-none d-lg-block sidebar-wrapper">
                        <div class="sidebar-container">
                            <NavMenu />
                        </div>
                    </aside>

                    <!-- Main Content Area -->
                    <main class="col-12 col-lg-9 col-xl-10 main-content">
                        <div class="content-wrapper animate-fade-in">
                            @Body
                        </div>
                    </main>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Modal modal;
    private int count;

    private void OpenModal()
    {
        modal.Show();
    }

    private void CloseModal()
    {
        modal.Hide();
    }

    protected override void OnInitialized()
    {
        ShoopingCart.OnCountChanged += val =>
        {
            count = val;
            StateHasChanged();
        };
    }
}
