

@code {
    [Parameter] public string Title { get; set; }
    
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public RenderFragment BodyContent { get; set; }
    [Parameter] public RenderFragment FooterContent { get; set; }
    [Parameter] public string ModalId { get; set; } = "myModal";  

    [Inject] IJSRuntime JS { get; set; }

    public void Show()
    {
        JS.InvokeVoidAsync("bootstrapModal.show", $"#{ModalId}");
    }

    public void  Hide()
    {
        JS.InvokeVoidAsync("bootstrapModal.hide", $"#{ModalId}");

    }
    private async Task CloseModal()
    {
        await OnClose.InvokeAsync(null);  
    }
 

}

<!-- مودال Bootstrap -->
<div class="modal fade" id="@ModalId" tabindex="-1" aria-labelledby="@ModalId + 'Label'" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@ModalId + 'Label'">@Title</h5>
                <button type="button" class="btn-close"  aria-label="Close" @onclick="Hide"></button>
            </div>
            <div class="modal-body">
                @BodyContent
            </div>

            <div class="modal-footer d-flex justify-content-between w-100">
                @FooterContent
             @*    <button type="submit" class="btn btn-primary" form="@ModalId">Save</button>
                <button type="submit" class="btn btn-primary">Save</button> *@
            </div>


        </div>
    </div>
</div>


 