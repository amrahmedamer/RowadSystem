@page "/invoice-sales-details/{invoiceNumber}"
<InvoicePayment @ref="invoicePaymentComponent" />

<h1 class="text-center fw-bold text-primary mb-4">Invoice Details</h1>


@if (_salesInvoiceResponse == null)
{
    <div class="text-center text-muted">
        <button class="btn btn-primary" type="button" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading...
        </button>
    </div>
}
else
{
    <div class="container">
        <!-- Invoice Header -->
        <div class="card shadow-sm border-light mb-4">
            <div class="card-body">
                <h4 class="card-title">Invoice #: @_salesInvoiceResponse.InvoiceNumber</h4>
                <p><strong>Customer:</strong> @_salesInvoiceResponse.CustomerName</p>
                <p><strong>Date:</strong> @_salesInvoiceResponse.InvoiceDate.ToShortDateString()</p>
                <p><strong>Total Amount:</strong> @_salesInvoiceResponse.Items.Sum(i => i.TotalPrice).ToString("C0", new CultureInfo("ar-EG"))</p>
            </div>
        </div>

        <!-- Invoice Items Table -->
        <div class="card shadow-sm border-light">
            <div class="card-body">
                <h5 class="card-title mb-4">Invoice Items</h5>
                <table class="table table-striped table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _salesInvoiceResponse.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.TotalPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        
            <div class="card border-0 shadow-sm mb-4 mt-3">
                <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
                    <div class="d-flex align-items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-credit-card-2-back " viewBox="0 0 16 16">
                            <path d="M11 5.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5z" />
                            <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm13 2v5H1V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1m-1 9H2a1 1 0 0 1-1-1v-1h14v1a1 1 0 0 1-1 1" />
                        </svg>
                        <div>
                            <h4 class="mb-0 fw-bold text-dark">Payment</h4>
                        </div>
                    </div>

                    <a @onclick="OpenPaymentModal" class="btn btn-outline-primary btn-sm fw-semibold px-4 py-2 shadow-sm d-flex align-items-center gap-3 ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                        </svg>
                        Add New Payment
                    </a>
                </div>
            </div>
        

     
    </div>
}

