@page "/invoice-purchase-return-details/{invoiceNumber}"


<h1 class="text-center fw-bold text-primary mb-4">Invoice Details</h1>


@if (_invoiceResponse == null)
{
    <div class="text-center text-muted">
        <button class="btn btn-primary" type="button" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading...
        </button>
    </div>
}
else
{
    <div class="container">
        <!-- Invoice Header -->
        <div class="card shadow-sm border-light mb-4">
            <div class="card-body">
                <h4 class="card-title">Invoice #: @_invoiceResponse.InvoiceNumber</h4>
                <p><strong>Supplier:</strong> @_invoiceResponse.SupplierName</p>
                <p><strong>Date:</strong> @_invoiceResponse.InvoiceDate.ToShortDateString()</p>
                <p><strong>Total Amount:</strong> @_invoiceResponse.Items.Sum(i => i.TotalPrice).ToString("C0", new CultureInfo("ar-EG"))</p>
            </div>
        </div>

        <!-- Invoice Items Table -->
        <div class="card shadow-sm border-light">
            <div class="card-body">
                <h5 class="card-title mb-4">Invoice Items</h5>
                <table class="table table-striped table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _invoiceResponse.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.TotalPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

