@using System.IO

<h3 class="text-center mb-4">Print Barcode for Product</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">
           @*  <!-- Quantity Input Section -->
            <div class="form-group">
                <label for="quantity" class="form-label">Quantity:</label>
                <input type="number" id="quantity" class="form-control" @bind="quantity" placeholder="Enter quantity" min="1" />
            </div>
 *@
            <!-- Print Button -->
            <button class="btn btn-success w-100" @onclick="PrintBarcodeAsync">
                <i class="bi bi-printer"></i> Generate Barcode
            </button>

            <!-- Barcode Display Section -->
            @if (barcodeBytes != null && barcodeBytes.Length > 0)
            {
                <div class="mt-4">
                    <h4 class="text-center text-success">Barcode Generated Successfully</h4>
                    <div class="text-center">
                        <img src="data:image/png;base64,@base64Barcode" alt="Barcode Image" class="img-fluid" />
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button class="btn btn-primary" @onclick="PrintPage">
                            <i class="bi bi-printer"></i> Print Barcode
                        </button>
                    </div>
                </div>
            }
            else
            {
                <p class="text-center text-danger mt-3">No barcode found or an error occurred.</p>
            }
        </div>
    </div>
</div>

