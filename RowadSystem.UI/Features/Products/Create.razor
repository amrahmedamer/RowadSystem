                    </div>
                </div>
            </div>
        </div>

        <!-- Units Section -->
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <strong>📦 Units & Pricing</strong>
                <button type="button" class="btn btn-sm btn-outline-success" @onclick="AddUnit">
                    ➕ Add Unit
                </button>
            </div>
            <div class="card-body">
                @for (int i = 0; i < ProductRequest.UnitsWithConversion.Count; i++)
                {
                    var index = i;
                    var unit = ProductRequest.UnitsWithConversion[i];

                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label">Unit</label>
                                    <select @bind="unit.UnitId" class="form-select">
                                        <option value="">Select Unit</option>
                                        @foreach (var item in _unitResponses)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Base Unit?</label>
                                    <div class="form-check mt-1">
                                        <InputCheckbox @bind-Value="unit.IsBaseUnit" class="form-check-input" />
                                        <label class="form-check-label ms-2">Yes</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Qty In Base Unit</label>
                                    <InputNumber @bind-Value="unit.QuantityInBaseUnit" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Selling Price</label>
                                    <InputNumber @bind-Value="unit.SellingPrice" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <button type="button" class="btn btn-sm btn-outline-danger mt-2" @onclick="@(() => RemoveUnit(index))">
                                        ❌ Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Submit -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-lg btn-primary px-5" >
                🚀 Submit Product
            </button>
        </div>


    </div>
</EditForm>
