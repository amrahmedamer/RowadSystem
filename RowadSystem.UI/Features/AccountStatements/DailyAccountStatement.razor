
 @page "/daily-account-statements"

<h3 class="text-center text-primary my-4">Daily Account Statement</h3>

@if (IsLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <ul class="nav nav-tabs mb-4">
        @foreach(var tab in Enum.GetValues<TabType>())
        {
            <li class="nav-item">
                <button class="nav-link @((currentTab == tab) ? "active" : "")" @onclick="() => SelectTab(tab)">
                    @tab.ToString()
                </button>
            </li>
        }
    </ul>

    <!-- Summary Card -->
    <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="m-0">Account Summary</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <p><strong>Invoice Count:</strong> @CurrentSummary?.InvoiceCount</p>
                </div>
                <div class="col-md-3 mb-2">
                    <p><strong>Total:</strong> @CurrentSummary?.TotalAmount</p>
                </div>
                <div class="col-md-3 mb-2">
                    <p><strong>Paid:</strong> @CurrentSummary?.TotalPaid</p>
                </div>
                <div class="col-md-3 mb-2">
                    <p><strong>Remaining:</strong> @CurrentSummary?.TotalDue</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Table and Filters -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="m-0">Invoice Details</h5>
            <div class="d-flex gap-2">
                <label for="pageSize" class="mb-0 text-muted">Rows </label>
                <select class="form-select form-select-sm" id="pageSize" @onchange="OnPageSizeChanged">
                    @foreach (var size in new[] { 5, 10, 20 })
                    {
                        <option value="@size" selected="@(PageSize == size)">@size</option>
                    }
                </select>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Invoice Number</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Paid</th>
                        <th>Remaining</th>
                    </tr>
                </thead>
                <tbody>
                    @if(CurrentDetails != null)
                    {
                        @foreach(var invoice in CurrentDetails.Items)
                        {
                            <tr @onclick="() => NavigateToInvoiceDetails(invoice.InvoiceNumber)">
                                <td>@invoice.InvoiceNumber</td>
                                <td>@invoice.CustomerName</td>
                                <td>@invoice.Date.ToShortDateString()</td>
                                <td>@invoice.TotalAmount</td>
                                <td>@invoice.Paid</td>
                                <td>@invoice.Due</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center mb-0">
            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>

            @for (int i = 1; i <= CurrentDetails.TotalPages; i++)
            {
                if (i == 1 || i == CurrentPage || i == CurrentDetails.TotalPages || Math.Abs(i - CurrentPage) <= 1)
                {
                    <li class="page-item @(CurrentPage == i ? "active" : "")">
                        <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                    </li>
                }
                else if (i == CurrentPage - 2 || i == CurrentPage + 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">…</span>
                    </li>
                }
            }

            <li class="page-item @(CurrentPage == CurrentDetails.TotalPages ? "disabled" : "")">
                <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>
        </ul>
    </nav>
}

